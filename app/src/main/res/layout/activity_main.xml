<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ranyass.scorekeeperapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Football match between"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="458dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text="K.S.A" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ksa" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Gools" />

            <TextView
                android:id="@+id/Gools_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="33sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Yellow Card" />

            <TextView
                android:id="@+id/Yellowc_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffdd00"
                android:textSize="33sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Red Card" />

            <TextView
                android:id="@+id/Redc_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ea0b0b"
                android:textSize="33sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/AddGool_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Gool" />

            <Button
                android:id="@+id/AddYcard_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Yellow Card" />

            <Button
                android:id="@+id/AddRcard_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Red Card" />
        </LinearLayout>
        <View
            android:id="@+id/view8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#fca2f3"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="K.W.I"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:srcCompat="@drawable/kwi" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Gools" />

            <TextView
                android:id="@+id/Gools_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="33sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Yellow Card" />

            <TextView
                android:id="@+id/Yellowc_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffdd00"
                android:textSize="33sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Red Card" />

            <TextView
                android:id="@+id/Redc_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ea0b0b"
                android:textSize="33sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/AddGool_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Gool" />

            <Button
                android:id="@+id/AddYcard_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Yellow Card" />

            <Button
                android:id="@+id/AddRcard_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Red Card" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
